<script src="~/Scripts/table2excel.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#tblArnMaster').DataTable({
            searching: false,

        });


        $("#btn_search1").click(function () {
            let obj = {}

            let krvcode = $("#select2").val();
            let searchText = $("#select3").val();
            let slctQurater = $("#select1").val();

            obj.krv_code = krvcode;
            obj.search_text = searchText;
            //obj.quarter = slctQurater;


            $("#TableData").show();
            $.ajax({
                url: "/ArnMaster/_ArnView",
                type: "get",
                data: obj,
                dataType: "html",
                success: function (result) {
                    $("#TableData").html(result);
                    table = $('#tblArnMaster').DataTable({ searching: false, });
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        window.location.reload();
                        return;
                    }
                    $("#TableData").hide();
                }

            });

        });

        $("#btnExport").click(function () {
            $("#tblArnMaster").table2excel({
                filename: "ArnMasterTable.xls"
              
            });
        });
    });



</script>


