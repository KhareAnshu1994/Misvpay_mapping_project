            <th scope="col">SAP_UFC_CODE <i class="fa fa-solid fa-sort" onclick="sortBy(15)"></i></th>
            <th scope="col">SAP_REGION_CODE <i class="fa fa-solid fa-sort" onclick="sortBy(15)"></i></th>
            <th scope="col">SAP_ZONE_CODE <i class="fa fa-solid fa-sort" onclick="sortBy(15)"></i></th>
