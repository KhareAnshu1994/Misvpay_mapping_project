<script>
    $(document).ready(function () {

        $('#tblMfdexMapNewCityDirect').DataTable({
            searching: false,

        });


        $("#btn_search").click(function () {
            let obj = {}

            let searchText = $("#txtsearch").val();
            let slctQurater = $("#select1").val();

            obj.search_text = searchText;
            //obj.quarter = slctQurater;


            $("#TableData").show();
            $.ajax({
                url: "/MfdexMapNewcityDirect/_MfdexMapNewcityDirectView",
                type: "get",
                data: obj,
                dataType: "html",
                success: function (result) {
                    $("#TableData").html(result);
                    table = $('#tblMfdexMapNewCityDirect').DataTable({ searching: false, });
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        window.location.reload();
                        return;
                    }
                    $("#TableData").hide();
                }

            });

        });
    });

</script>



